<li id="report-<%= report.id %>">
  <span class="vessel"><%= link_to report.vessel.name, report.vessel %></span>
  <span class="content">
    <%= report.content %>
    <% if report.image.attached? %>
      <%= image_tag report.image, :size =>'500x500' %>
    <% end %>

    移動:<%=report.lat%> 軽度:<%=report.lon%>
  </span>
  <span class="timestamps">
    Posted <%= time_ago_in_words(report.created_at) %> ago
    <%= link_to "削除", report_delete_path(:id => report.id), data: {confirm: "You sure?"} %>
  </span>
</li>
